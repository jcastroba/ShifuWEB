---
export const prerender = false;
import "@fontsource-variable/roboto-condensed";
import Navbar from '../components/Navbar.astro';
import '@fontsource/lilita-one';



 // Asegura que sea SSR y tengas acceso a Astro.request
import { getUserFromSession } from '../utils/auth';
const user = await getUserFromSession(Astro);

---

<!doctype html>
<html lang="es">
  <head>
    <meta
      name="description"
      content="Shifu Bot es un bot de Discord de control de turnos y breaks para equipos de trabajo."
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Shifu Bot</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      // Force Dark Mode
      document.documentElement.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    </script>
  </head>
  <body>
    <Navbar user={user} />
    <main class="flex-1 flex flex-col transition-colors duration-300 relative">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  html {
    font-family: "Roboto Condensed", sans-serif;
	font-size: 16px;
  }

  :root {
    /* Dark Mode (Forced) */
    --primary: #F472B6; /* Pink 400 - Bright on dark */
    --secondary: #818CF8; /* Indigo 400 */
    --primary-dark: #EC4899; /* Pink 500 */
    --secondary-dark: #1E293B; /* Slate 800 - Matches surface for cards/nav */
    
    --background: #0F172A; /* Slate 900 */
    --surface: #1E293B; /* Slate 800 */
    --text-main: #F8FAFC; /* Slate 50 */
    --text-muted: #94A3B8; /* Slate 400 */
    --border-color: #334155; /* Slate 700 */
  }

  .dark {
    /* Dark Mode - High Contrast */
    --primary: #F472B6; /* Pink 400 - Bright on dark */
    --secondary: #818CF8; /* Indigo 400 */
    --primary-dark: #EC4899; /* Pink 500 */
    --secondary-dark: #1E293B; /* Slate 800 - Matches surface for cards/nav */
    
    --background: #0F172A; /* Slate 900 */
    --surface: #1E293B; /* Slate 800 */
    --text-main: #F8FAFC; /* Slate 50 */
    --text-muted: #94A3B8; /* Slate 400 */
    --border-color: #334155; /* Slate 700 */
  }

  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--background);
    color: var(--text-main);
  }
</style>
